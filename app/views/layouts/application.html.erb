<!DOCTYPE html>
<html>
  <head>
    <title>TodoListWithAuth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="container">
    <% flash.each do |type, message| %>
      <div class='bg-<%= type %> p-3 rounded mb-2 shadow-sm'>
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
    </div>
  </body>
</html>
